nav
  position fixed
  top 0
  left 0
  width 100%
  background black80
  z-index 999
  transition all 250ms ease-out

  .nav-inner
    position relative
    max-width contentWidth
    margin 0 auto
    padding 0 40px

  a.active
    background-color red

  a
    position relative
    padding 20px
    font-weight 700
    text-decoration none
    text-transform uppercase

    &,
    &:visited
      color #ccc

    &:hover,
    &:active,
    &:focus
      color #fff

  &#standard-nav
    margin 0 auto
    padding 0
    text-align left

    a
      display inline-block

  &#mobile-nav
    display none
    padding 0
    text-align right
    top -236px

    a
      display block
      padding-right 12%

      &#menu
        font-size 14px
        font-weight 300
        line-height 20px

@media screen and (max-width 768px)

  nav#standard-nav
    display none

  nav#mobile-nav
    display block
