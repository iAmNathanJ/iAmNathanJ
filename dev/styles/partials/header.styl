header
  position relative
  padding 30px 0 0
  width 100%
  min-height 100%
  background url('../images/header-back-lg.jpg') center right
  background-position center center
  background-size cover
  overflow hidden

  @media all and (max-width: 880px)
    background url('../images/header-back-reg.jpg') center right
    background-position center center
    background-size cover

  @media all and (max-width: 480px)
    background url('../images/header-back-med.jpg') center right
    background-position center center
    background-size cover

  .content
    position absolute
    padding 0
    width contentWidth
    max-width 100%
    height 100%
    left 50%
    transform translateX(-50%)

  .header-container
    position absolute
    padding: 0 40px
    width 100%
    top 50%
    transform translateY(-50%)

    @media all and (max-width: 480px)
      top 25%
      transform none

    p
      color white
      // text-align justify

      @media all and (max-width: 480px)
        font-size 1rem

  h1
    position relative
    margin-top 16px;
    font-size 3rem
    font-weight heavyFontWeight
    letter-spacing -0.1rem
    line-height 1
    text-align left
    text-transform uppercase
    color white80
    transition all 250ms ease-out

    @media all and (max-width: 600px)
      margin-top 0

    @media all and (max-width: 480px)
      font-size 2rem
      text-align center

    small
      display block
      margin-top 6px
      font-size 1.3rem
      color red
      text-transform uppercase
      letter-spacing 0

      @media all and (max-width: 480px)
        font-size 1.1rem


  h2
    transform translateX(0)

  .logo
    position relative
    float left
    width 130px
    height 130px
    transition all 250ms ease-out

    @media(max-width: 600px)
      float none
      margin-left -15px

    @media all and (max-width: 480px)
      margin-left auto
      margin-right auto
      width 100px
      height 100px

    img
      position absolute
      top 0
      left 0
      margin 0
      width 100%
      height 100%
