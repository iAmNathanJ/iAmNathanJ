// @import url('http://fonts.googleapis.com/css?family=Lato:100,300,700')

*,
*:before,
*:after
  box-sizing border-box
  margin 0
  padding 0

body
  position relative
  margin 0
  font-family 'lato', helvetica, sans-serif
  font-size 16px
  background #eee
  color black70

h2
  max-width 1060px
  margin 0 auto
  padding 0 40px
  font-size 3rem
  color black80
  text-align left
  letter-spacing 1rem
  overflow hidden
  opacity 0
  transform translateX(-20px)
  transition opacity .2s ease-out, transform .2s ease-out
  
  &.active
    opacity 1
    transform translateX(0)
    
  
  small
    display block
    font-size 1.3rem
    font-weight 300
    color white80
    text-transform uppercase
    letter-spacing 0

h3
  margin 0 0 10px
    
p
  margin 0 0 20px
  font-size 20px
  line-height 1.4
  // max-width 640px
  font-weight 300
  letter-spacing 1.2
  
  @media screen and (max-width 640px)
    width 100%
    
.logo2
  position fixed
  right calc((100% - 1060px) / 2)
  top 99px
  margin 0
  padding 0
  width 200px
  height 200px
  perspective 500px
  transform translateX(120px)
  transition all 250ms ease-out

  .logo-inner
    position absolute
    width 100%
    height 100%
    transform-style preserve-3d
    transform rotateX(-30deg) rotateY(45deg) translateX(0) translateY(70px) translateZ(-100px)
    transition transform 200ms  

  img
    position absolute
    top 0
    left 0
    padding 20px
    margin 0
    width 100%
    height 100%
    background white80
    border 1px dashed black40
    backface-visibility hidden
    transition transform .4s ease-out
    
  @media screen and (max-width 768px)
    right 0
    top 140px
    position relative
    margin 0 auto

section
  position relative
  display block
  margin 0
  padding 80px 0 0
  width 100%
  clear both
  overflow hidden
  z-index 1

  &.green
    background linear-gradient(pink, green 20%)
  
  &.blue
    background linear-gradient(green, blue 20%)
  
  &.pink
    background linear-gradient(yellow, pink 20%)
  
  &.yellow
    background linear-gradient(blue, yellow 20%)

  ul
    margin-left 20px

#things,
#about
  section
    display inline-block
    clear none
    float left
    padding 0
    @extend .cf
    
    &.right
      width 100%

    &.left
      width 67%
      margin-right 5%
      
    &.right
      width 28%
      
    @media screen and (max-width 640px)
      display block
      float none
      clear both
      min-width 100%
  
.content
  position relative
  max-width 1060px
  margin 0 auto
  padding 40px
  overflow hidden

  @media screen and (max-width 460px) 
    padding 20px

  a
    color white90
    text-decoration none
    font-weight 700
    
    &:hover
      color red

.fence
  position relative
  width 100%
  height 100px
  background url(../images/fence.svg) repeat-x
  background-size auto 100%
  background-position center center


@media screen and (max-width 460px)
  h2
    text-align center
  
  .bling
    width 76%
    margin 0 auto
    padding 20px 0
    display block
    float none
    clear both
  
@media screen and (max-width 320px)
  nav a
    padding 20px 5px
  
  header
    text-align center
  
  header img
    margin 0 0 -3px 0

