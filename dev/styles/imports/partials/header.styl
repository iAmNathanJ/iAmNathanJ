header
  position relative
  width 100%
  height 350px
  margin 0
  padding 0
  background url('../images/header-back.jpg') center right
  background-position center center
  background-size cover
  overflow hidden

  @media screen and (max-width 768px)
    height 470px
  
  .header-overlay
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    background black30
  
  .header-parallax
    position absolute
    top 0
    right 0
    bottom 0
    left 0
  
  .header-parallax-content
    position relative
    max-width 1060px
    height 100%
    margin 0 auto
    padding 0 0 40px
    overflow visible
  
  h1
    position absolute
    top 174px
    left 40px
    max-width 100%
    font-size 2rem
    font-weight 300
    letter-spacing 1rem
    text-align left
    text-transform uppercase
    color white80
    transition all 250ms ease-out
    overflow hidden

    small
      display block
      font-size 1.3rem
      font-weight 300
      color white80
      text-transform uppercase
      letter-spacing 0
    
    @media screen and (max-width 768px)
      text-align center
      left 0
      top 99px
      position relative
      margin 0 auto
  
  .logo
    position absolute
    right 40px
    top 99px
    margin 0
    padding 0
    width 200px
    height 200px
    perspective 500px
    transition all 250ms ease-out

    .logo-inner
      position absolute
      width 100%
      height 100%
    
    img
      position absolute
      top 0
      left 0
      padding 20px
      margin 0
      width 100%
      height 100%
      background pink
      border 1px dashed black40
      backface-visibility hidden
      transition transform .4s ease-out
    
    @media screen and (max-width 768px)
      right 0
      top 130px
      position relative
      margin 0 auto
