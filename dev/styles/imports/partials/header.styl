header
  position relative
  width 100%
  height 350px
  margin 0
  padding 0
  background url('../images/header-back.jpg') center right
  background-position center center
  background-size cover
  overflow hidden

  @media screen and (max-width 768px)
    height 450px
  
  .header-overlay
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    background black30
  
  .header-parallax
    position absolute
    top 0
    right 0
    bottom 0
    left 0
  
  .header-parallax-content
    position relative
    max-width 1060px
    height 100%
    margin 0 auto
    padding 0 0 40px
    overflow visible
  
  h1
    position absolute
    top 174px
    left 40px
    max-width 100%
    font-size 2rem
    font-weight 300
    letter-spacing 1rem
    text-align left
    text-transform uppercase
    color white80
    transition all 250ms ease-out
    overflow hidden

    small
      display block
      font-size 1.3rem
      font-weight 300
      color white80
      text-transform uppercase
      letter-spacing 0
    
    @media screen and (max-width 768px)
      text-align center
      left 0
      top 99px
      position relative
      margin 0 auto
  
  .logo
    position absolute
    right 40px
    top 99px
    margin 0
    padding 0
    width 200px
    height 200px
    perspective 500px
    transform translateX(120px)
    transition all 250ms ease-out

    .logo-inner
      position absolute
      width 100%
      height 100%
      transform-style preserve-3d
      transform rotateX(-30deg) rotateY(45deg) translateX(0) translateY(70px) translateZ(-100px)
      transition transform 200ms
    
    img
      position absolute
      top 0
      left 0
      padding 20px
      margin 0
      width 100%
      height 100%
      background white80
      border 1px dashed black40
      backface-visibility hidden
      transition transform .4s ease-out

      &.one
        transform rotateX(0)
        background pink
        z-index 6
      
      &.two
        transform rotateX(180deg) translateZ(200px)
        background pink
        z-index 5
      
      &.three
        transform rotateY(90deg) translateX(100px) translateZ(100px)
        background pink
        z-index 4
      
      &.four
        transform rotateY(-90deg) translateX(-100px) translateZ(100px)
        background pink
        z-index 3
      
      &.five
        transform rotateX(90deg) translateY(-100px) translateZ(100px)
        background pink
        z-index 2
      
      &.six
        transform rotateX(-90deg) translateY(100px) translateZ(100px)
        background pink
        z-index 1
    
    @media screen and (max-width 768px)
      right 0
      top 140px
      position relative
      margin 0 auto
    
  &:hover
    .logo
      transform translateX(0)
    
    .logo-inner
      transform rotateX(0) rotateY(0) translateX(0) translateY(0) translateZ(0)
    
    img.one
      transform rotateX(0)
      background pink
      z-index 6
    
    img.two
      transform rotateX(0) translateZ(0)
      background pink
      z-index 5
    
    img.three
      transform rotateY(0)  translateX(0) translateZ(0)
      background pink
      z-index 4
    
    img.four
      transform rotateY(0) translateX(0) translateZ(0)
      background pink
      z-index 3
    
    img.five
      transform rotateX(0) translateY(0) translateZ(0)
      background pink
      z-index 2
    
    img.six
      transform rotateX(0) translateY(0) translateZ(0)
      background pink
      z-index 1
    
