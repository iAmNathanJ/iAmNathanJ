header
  position relative
  padding 30px 0 0
  width 100%
  min-height 100%
  background url('../images/header-back-lg.jpg') center right
  background-position center center
  background-size cover
  overflow hidden

  @media all and (max-width: 880px)
    background url('../images/header-back-reg.jpg') center right
    background-position center center
    background-size cover

  @media all and (max-width: 480px)
    background url('../images/header-back-med.jpg') center right
    background-position center center
    background-size cover

  .content
    position absolute
    padding 0
    width contentWidth
    max-width 100%
    height 100%
    left 50%
    transform translateX(-50%)

  .header-container
    position absolute
    padding: 0 40px
    width 100%
    top 50%
    transform translateY(-50%)

    p
      color white
      text-align justify

      @media all and (max-width: 480px)
        font-size 1rem

  h1
    position relative
    top 20px
    margin-bottom 40px
    padding-right 10px
    font-size 3rem
    font-weight 700
    letter-spacing -0.2rem
    line-height 1
    text-align left
    text-transform uppercase
    color white80
    transition all 250ms ease-out

    @media all and (max-width: 480px)
      font-size 2rem
      margin-bottom 30px

    small
      display block
      font-size 1.3rem
      font-weight 300
      color red
      text-transform uppercase
      letter-spacing 0

      @media all and (max-width: 480px)
        font-size 1.1rem


  .logo
    position relative
    float left
    margin -10px 0 0 -10px
    width 200px
    height 200px
    transition all 250ms ease-out

    @media all and (max-width: 640px)
      width 125px
      height 125px

    img
      position absolute
      top 0
      left 0
      margin 0
      width 100%
      height 100%
