header
  position relative
  padding 59px 0 0
  width 100%
  min-height 100%
  background url('../images/header-back-lg.jpg') center right
  background-position center center
  background-size cover
  overflow hidden

  .content
    position absolute
    width contentWidth
    max-width 100%
    left 50%
    top 50%
    transform translateX(-50%) translateY(-75%)

    @media all and (max-width: 640px)
      top 0
      transform translateX(-50%) translateY(0)

  .header-container
    position relative
    height 100%
    overflow hidden

    p
      margin-top 140px
      color white

      @media all and (max-width: 480px)
        margin-top 0

  h1
    position absolute
    width 100%
    top 40px
    font-size 3rem
    font-weight 700
    letter-spacing -0.2rem
    line-height 1
    text-align left
    text-transform uppercase
    color white80
    transition all 250ms ease-out
    overflow hidden

    @media all and (max-width: 640px)
      font-size 2rem
      text-align left
      left 0
      top 99px
      position relative
      margin 0 auto

    @media all and (max-width: 480px)
      text-align center

    small
      display block
      font-size 1.3rem
      font-weight 300
      // color white80
      color red
      text-transform uppercase
      letter-spacing 0

      @media all and (max-width: 480px)
        font-size 1.1rem


  .logo
    position relative
    float right
    margin-top 30px
    width 200px
    height 200px
    perspective 500px
    transition all 250ms ease-out

    @media all and (max-width: 480px)
      float none
      margin 0 auto
      top 100px

    .logo-inner
      position absolute
      width 100%
      height 100%

    img
      position absolute
      top 0
      left 0
      margin 0
      width 100%
      height 100%
      transition transform .4s ease-out
